<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:background="@drawable/theme_background_button"
        android:gravity="center"
        android:text="Trang Chủ"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/home_shipper_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:text="Không Có Gói Hàng Mới"
        android:textSize="15sp"
        android:textStyle="bold|italic"
        android:visibility="gone" />

    <ListView
        android:id="@+id/owner_home_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/footer_height"></ListView>


</LinearLayout>